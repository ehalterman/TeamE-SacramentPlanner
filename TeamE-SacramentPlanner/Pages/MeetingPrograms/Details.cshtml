        <dt class="col-sm-2 col-print">
            @Html.DisplayNameFor(model => model.MeetingProgram.OpHymnName)
        </dt>
        <dd class="col-sm-10 col-print">
            @Html.DisplayFor(model => model.MeetingProgram.OpHymnName)
        </dd>
        <dt class="col-sm-2 col-print">
            @Html.DisplayNameFor(model => model.MeetingProgram.OpHymnNumber)
        </dt>
        <dd class="col-sm-10 col-print">
            @Html.DisplayFor(model => model.MeetingProgram.OpHymnNumber)
        </dd>
        <dt class="col-sm-2 col-print">
            @Html.DisplayNameFor(model => model.MeetingProgram.Invocation)
        </dt>
        <dd class="col-sm-10 col-print">
            @Html.DisplayFor(model => model.MeetingProgram.Invocation)
        </dd>
        <dt class="col-sm-2 col-print">
            @Html.DisplayNameFor(model => model.MeetingProgram.SHymnName)
        </dt>
        <dd class="col-sm-10 col-print">
            @Html.DisplayFor(model => model.MeetingProgram.SHymnName)
        </dd>
        <dt class="col-sm-2 col-print">
            @Html.DisplayNameFor(model => model.MeetingProgram.SHymnNumber)
        </dt>
        <dd class="col-sm-10 col-print">
            @Html.DisplayFor(model => model.MeetingProgram.SHymnNumber)
        </dd>

        @for (int i = 0; i < Model.MySpeakers.Count(); i++)
        {

            {
                <dt class="col-sm-2">
                    @Html.DisplayFor(modelItem => Model.MySpeakers[i].SpeakerType)
                </dt>

                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => Model.MySpeakers[i].SpeakerName)
                </dd>
            }
        }

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MeetingProgram.MusicalNumber)
        </dt>
        <dd class="col-sm-10 col-print">
            @Html.DisplayFor(model => model.MeetingProgram.MusicalNumber)
        </dd>
        <dt class="col-sm-2 col-print">
            @Html.DisplayNameFor(model => model.MeetingProgram.ClHymnName)
        </dt>
