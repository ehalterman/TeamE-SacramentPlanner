@page
@model TeamE_SacramentPlanner.Pages.MeetingPrograms.DetailsModel

@{
    ViewData["Title"] = "Program Details";
}

<h1 class="no-print">Program Details</h1>

<div>
    <h4>Team E Ward</h4>
