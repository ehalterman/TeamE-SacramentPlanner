    <hr class="no-print" />
    <dl class="row">
        <dt class="col-sm-2 no-print">
            @Html.DisplayNameFor(model => model.MeetingProgram.MeetingDate)
        </dt>
        <dd class="col-sm-10 no-print">
            @Html.DisplayFor(model => model.MeetingProgram.MeetingDate)
        </dd>
        <dt class="col-sm-2 col-print">
            @Html.DisplayNameFor(model => model.MeetingProgram.Presiding)
        </dt>
